<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="390dp"
        android:src="@drawable/blue"
        android:scaleType="centerCrop"
        android:id="@+id/blu"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@drawable/child"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-370dp"
        android:id="@+id/child"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="Mark \nAttandance"
        android:layout_below="@id/child"
        android:layout_marginStart="30dp"
        android:background="#F37B56"
        android:textColor="@color/white"
       android:paddingTop="100dp"
        android:paddingStart="20dp"
       android:layout_marginTop="-370dp"
        android:id="@+id/mark"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_calendar_month_24"
        android:layout_below="@id/mark"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-130dp" />
    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="Show\nAttandance"
        android:layout_below="@id/child"
        android:layout_marginStart="155dp"
        android:layout_marginTop="-370dp"
        android:background="#FA2D73"
        android:textColor="@color/white"
        android:paddingLeft="18dp"
        android:paddingTop="100dp"
        android:id="@+id/show"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="50dp"
       android:src="@drawable/baseline_account_box_24"
        android:layout_below="@id/show"
        android:layout_marginStart="150dp"
        android:layout_marginTop="-130dp"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:text="Home\nWork"
        android:layout_below="@id/child"
        android:layout_marginStart="280dp"
        android:layout_marginTop="-370dp"
        android:background="#1595CF"
        android:paddingLeft="18dp"
        android:paddingTop="100dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/home"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/cop"
        android:layout_below="@id/home"
        android:layout_marginStart="290dp"
        android:layout_marginTop="-130dp"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="#ED8AAC"
        android:layout_below="@id/mark"
        android:layout_marginTop="50dp"
        android:text="Gallary"
        android:textColor="#D81457"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:id="@+id/tet"
        android:textStyle="bold"
        android:layout_marginStart="30sp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/galicon"
        android:layout_toEndOf="@id/tet"

        android:layout_marginTop="515sp"
        android:layout_marginStart="-60dp"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:background="#91C1E8"
        android:textColor="#125B95"
        android:text="Pay Fee"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@id/tet"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:id="@+id/pay"
        android:layout_marginStart="30sp"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/pay"
        android:layout_toEndOf="@id/pay"
        android:layout_marginTop="590dp"
        android:layout_marginStart="-60dp" />
  <TextView
      android:layout_width="160dp"
      android:layout_height="50dp"
      android:background="#A9EDAC"
      android:text="Notice"
      android:textSize="20dp"
      android:textStyle="bold"
      android:layout_toEndOf="@id/tet"
      android:layout_marginTop="510dp"
      android:layout_marginStart="30sp"
      android:textColor="#139718"
      android:paddingStart="15dp"
      android:id="@+id/not"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="34dp"
        android:src="@drawable/box"
        android:layout_below="@id/not"
        android:layout_marginStart="330dp"
        android:layout_marginTop="-50dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#D18A74"
        android:layout_below="@id/not"
        android:layout_marginStart="228dp"
        android:layout_marginTop="30dp"
        android:text="About"
        android:textStyle="bold"
        android:textColor="#F3DF120C"
        android:textSize="20dp"
        android:paddingLeft="15dp"
        android:id="@+id/about"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/orangebag"
      android:layout_below="@id/about"
        android:layout_marginStart="330sp"
        android:layout_marginTop="-50dp"/>

</RelativeLayout>